include ../../scripts/makeIncl
LDFLAGS=-r -nostdlib --oformat=elf32-i386 -melf_i386
CFLAGS+=-I../../../include/

DEPS=bus.c drive.c
TARGETS=virtual.o

.PHONY: all
all: $(TARGETS)
	mv -vf virtual.o ../

$(TARGETS): $(DEPS)
	$(CC) $(CFLAGS) $(FLAGS) $(DEPS)
	$(LD) $(LDFLAGS) -o $(TARGETS) *.o

.PHONY: clean
clean:
	rm -fv *.o
