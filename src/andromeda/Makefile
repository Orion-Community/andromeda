include ../scripts/makeIncl
CFLAGS+=-I../include
LDFLAGS=-r -nostdlib --oformat=elf32-i386 -melf_i386

ELF=elf.c exec.c
TIMER=timer.c
CORE=core.c
SYSCALL=syscall.c
PANIC=panic.c

MK_FLAGS=FLAGS="$(FLAGS)"

.PHONY: all
all: andromeda.o
	mv -fv andromeda.o ../

andromeda.o: load.o ktimer.o sched.o core.o syscall.o panic.o drivers.o buffer.o \
atomic.o lib.o
	$(LD) $(LDFLAGS) *.o -o andromeda.o

load.o: $(ELF)
	$(CC) $(CFLAGS) $(FLAGS) $(ELF)

ktimer.o:
	$(MAKE) -C timer/ $(MK_FLAGS)

sched.o:
	$(MAKE) -C scheduling/ $(MK_FLAGS)

core.o: $(CORE)
	$(CC) $(CFLAGS) $(FLAGS) $(CORE)

syscall.o: $(SYSCALL)
	$(CC) $(CFLAGS) $(FLAGS) $(SYSCALL)

panic.o: $(PANIC)
	$(CC) $(CFLAGS) $(FLAGS) $(PANIC)

drivers.o: drivers.c
	$(CC) $(CFLAGS) $(FLAGS) drivers.c

buffer.o: buffer.c
	$(CC) $(CFLAGS) $(FLAGS) buffer.c

atomic.o: atomic.c
	$(CC) $(CFLAGS) $(FLAGS) atomic.c

lib.o: lib.c
	$(CC) $(CFLAGS) $(FLAGS) lib.c

.PHONY: clean
clean:
	rm -fv *.o